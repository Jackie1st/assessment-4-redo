<h1>Categories</h1>

<% @categories.each do |category| %>
		<ul> 
			<li><%= link_to category.name, category_posts_path(category.id) %></li>
			<%= link_to "Delete Category", { action: :destroy, id: category.id }, method: :delete, data: { confirm: 'Are you sure?' } %>
		</ul> 
<% end %>

	<%= link_to "Create New Category", new_category_path %><br />